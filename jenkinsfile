pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', credentialsId: '5b2c07d5-80dd-486a-8e83-76736e622d7e', url: 'git@github.com:danielnelsonp/web0.1.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npx jest'  // Ensures Jest runs from local node_modules
            }
        }

        stage('Build Docker Image') {
            when {
                not {
                    failed()
                }
            }
            steps {
                sh 'docker build -t my-app:latest .'
            }
        }

        stage('Deploy') {
            when {
                not {
                    failed()
                }
            }
            steps {
                sh './deploy.sh'
            }
        }
    }
}

